<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".DetailsReport">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_24">

        </ImageView>

        <!-- TÃ­tulo -->
        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="6dp"
                android:paddingLeft="15dp"
                android:text="Detalles de la carga"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="32sp"
                android:textColor="@color/black"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txtTitle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Fecha"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/calendar"
                    android:layout_marginLeft="30dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunes 13, Marzo -6:20 A.M"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>

            </LinearLayout>
            <TextView
                android:id="@+id/txtTitleliters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text="Litros Cargados"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/linearLayoutliters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gaas"
                    android:layout_marginLeft="20dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/txt_liters"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="850 Lts"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutfolioandmgj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtTitlefolio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Folio de la carga"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtTitledepartede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="De parte de"
                    android:textAlignment="viewEnd"

                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutfolio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/folder"
                    android:layout_marginLeft="20dp"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/txt_folio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="30dp"
                    >

                </TextView>
                <TextView
                    android:id="@+id/txt_departede"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MGJ"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textAlignment="viewEnd"
                    >
                </TextView>

            </LinearLayout>
            <TextView
                android:id="@+id/txtPersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Personal que cargo"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textColor="@color/gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />

            <LinearLayout
                android:id="@+id/linearLayoutpersonal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fotoimagen" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp">

                    <TextView
                        android:id="@+id/txt_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chato"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_cargo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guardia de patio"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="18sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imagearrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_arrow_forward_ios_24"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtDatosunidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Datos de la unidad"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="16sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/darker_gray" />
            <LinearLayout
                android:id="@+id/linearLayoutuniadoperador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txtTitleUnidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unidad MGJ"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/txtTitleOperador"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Operador"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutuniad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center|top">
                <ImageView
                    android:layout_width="59dp"
                    android:layout_height="28dp"
                    android:src="@drawable/logocicularmgj"
                    >
                </ImageView>
                <TextView
                    android:id="@+id/txt_numberunidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="07"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="8dp"
                    >

                </TextView>
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_operatorname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martin Gammon"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/operador"

                    >
                </ImageView>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutplacas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitleplacas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Placas"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutplacas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/txt_numeroplacas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="31-az-6z"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginRight="10dp"
                    android:textAllCaps="true"
                    >
                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/licenseplate"

                    >
                </ImageView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtTitleempresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Empresa"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayoutEmpresa2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_empresa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="MGJ"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/poppins_light"
                    android:textSize="18sp"
                    android:textColor="@color/black" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
